@using resourceView = TK_ECAR.Content.resources.TK_ECAR_Resource

<select id="Delegacion" title=@resourceView.LSelectDel multiple="multiple" class="form-control">
    <option></option>
</select>
<style type="text/css">
    #Delegacion {
        width: 100% !important;
        display: block;
    }
</style>
<script type="text/javascript">

    $(function () {
        chosenDelegacion();
    });

    function chosenDelegacion() {
        var link = '@Html.Raw(Url.Action("GetDelegaciones", "Filter", new { empresasSel = "empSel", dirTerritorialSel = "dtSel"}))';
        link = link.replace("empSel", ConcatenaValoresChosen("Empresa")).replace("dtSel", ConcatenaValoresChosen("DireccionTerritorial"));
        $('#Delegacion').prepend($('<option></option>').html('@resourceView.msgCargando'));
        $("#Delegacion").ajaxChosen({
            type: 'GET',
            url: link,
            minTermLength: 0,
            dataType: 'json'
        }, function (data) {
            var terms = [];
            $.each(data, function (i, val) {
                terms[i] = val;
            });
            return terms;

        },
            {
                //options
                disable_search_threshold: -1,

            });

    }


    $('#Delegacion').change(function () {

        LimpiaFiltroChosen("CentroCoste");

        chosenCentroCoste();

    });

</script>

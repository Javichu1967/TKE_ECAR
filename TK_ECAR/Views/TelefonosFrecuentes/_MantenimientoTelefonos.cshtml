@using TK_ECAR.Models
@model TelefonosFrecuentesModels

@{ 
    var accion = Model.Accion;
}

@Html.HiddenFor(m => m.Accion)
<div class="form-horizontal">
    <div class="form-group">
        @Html.RequiredLabelFor(m => m.ID_Empresa, new { @class = "control-label col-sm-4" })
        <div class="col-sm-8">
            @Html.DropDownListEmpresas("ID_Empresa", new { @class = "form-control" }, Model.ID_Empresa, Model.Accion)
        </div>
    </div>
    @if (accion == TK_ECAR.Framework.EnumAccionEntity.Modificacion)
    {
        <div class="form-group">
            @Html.LabelFor(m => m.NUMERO_TELEFONO, new { @class = "control-label col-sm-4" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.NUMERO_TELEFONO, new { @class = "form-control", @readonly = true })
            </div>
        </div>
    }
    else
    {
        <div class="form-group">       
            @Html.RequiredLabelFor(m => m.NUMERO_TELEFONO, new { @class = "control-label col-sm-4" })
            <div class="col-sm-8">       
                @Html.TextBoxFor(m => m.NUMERO_TELEFONO, new { @class = "form-control" })
            </div>
        </div>
    }
    <div class="form-group">
        @Html.RequiredLabelFor(m => m.DESCRIPCION, new { @class = "control-label col-sm-4" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.DESCRIPCION, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            @Html.Partial("_CustomValidationSummary", ViewData.ModelState)
        </div>
    </div>
</div>

 
@using TK_ECAR.Models
@model CategoriasModel

@Html.HiddenFor(m => m.ID_Categoria)
@Html.HiddenFor(m => m.Accion)
<div class="form-horizontal">
    <div class="form-group">
        @Html.RequiredLabelFor(m => m.Nombre, new { @class = "control-label col-sm-4" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m=>m.Nombre, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.RequiredLabelFor(m => m.Ordenacion, new { @class = "control-label col-sm-4" })
        <div class="col-sm-8">
            @Html.DropDownListOrdenacionCategorias("Ordenacion", new { @class = "form-control" }, Model.Ordenacion, Model.Accion)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            @Html.Partial("_CustomValidationSummary", ViewData.ModelState)
        </div>
    </div>
</div>

 
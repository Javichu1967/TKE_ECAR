@using resourceView = TK_ECAR.Content.resources.TK_ECAR_Resource


@using (Html.BeginForm("GuardarSolicitud", "Alertas",null, FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "stripHtml('formSolicitud')", @id="formSolicitud" }))
{ 
    @Html.AntiForgeryToken()
    
    <div class="modal fade" id="modalSolicitud" role="dialog">
        <div class="vertical-alignment-helper">
            <div class="modal-dialog  vertical-align-center">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            <span class="modal-header-logo"></span>
                        </button>
                        <h4 class="modal-title" id="modaltitleSolicitud"> </h4>
                    </div>
                         
                    <div class="modal-body" id="modalbodySolicitud"> 
                        @*<div id="toast-container"></div>*@      
                    </div>                             
                    <div class="modal-footer">
                        <button type="submit" id="aceptarSolictud" class="btn btn-default">@resourceView.AccionAceptar</button>
                        <button type="button" class="btn btn-cancel" data-dismiss="modal">@resourceView.AccionCerrar</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
      
}

    <script type="text/javascript">

        $(document).ready(function () {

            $("#formSolicitud").submit(function (e) {
                if ($("#formSolicitud").valid()) {//validamos el form
                    var formData = new FormData(this);

                    $.ajax({
                        type: this.method,
                        url: this.action,
                        data: formData,
                        contentType: false,
                        processData: false,
                        statusCode: {
                            278: function (data) {
                                //toastr["warning"]("Ha surgido un problema intentado enviar el email de solicitud.");
                                notify("Ha surgido un problema intentado enviar el email de solicitud.", 'w');
                            }
                        },
                    }).done(function (data, textStatus, jqXHR) {
                        if (jqXHR.status == 278 || data == 'Success') {
                            //toastr.options = {
                            //    containerId: 'toast-container'
                            //}
                            tableAlertas.ajax.reload(null, false);

                            notify('@resourceView.toastrInfGuardarSolicitudOK', 'i');
                            @*toastr["info"]('@resourceView.toastrInfGuardarSolicitudOK');*@

                            $('#modalSolicitud').modal('hide');


                            //tableAlertas.ajax.reload(null, false);

                            //$('#modalSolicitud').modal('hide');
                        }
                        else {
                            notify(data, 'e');
                            //toastr["error"](data);
                        }
                    });
                }

                e.preventDefault();

            });


        });




    </script>

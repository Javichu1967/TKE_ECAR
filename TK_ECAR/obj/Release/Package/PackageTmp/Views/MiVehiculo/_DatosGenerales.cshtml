@using resourceView = TK_ECAR.Content.resources.TK_ECAR_Resource
@using TK_ECAR.Models
@model DatosGeneralesModel

<style>
    p {      
      width: 100%;     
      padding-right : 2px; 
    }
</style>
<div class="notice notice-Lightgreen">
    <div class="row">
        <div class="col-sm-12">
            <h2>@resourceView.TabDatosGenerales</h2>

        </div>
    </div>
    <div class="row">
        @Html.HiddenFor(model => model.IDEmpresa)
        <div class="col-sm-2">
            <strong>@Html.LabelFor(model => model.Matricula)</strong>
            <p>@Html.DisplayFor(model => model.Matricula)</p>
        </div>
        <div class="col-sm-2">
            <strong>@Html.LabelFor(model => model.Marca)</strong>
            <p>@Html.DisplayFor(model => model.Marca)</p>
        </div>
        <div class="col-sm-2">
            <strong>@Html.LabelFor(model => model.Modelo)</strong>
            <p>@Html.DisplayFor(model => model.Modelo)</p>

        </div>
        <div class="col-sm-2">
            <strong>@Html.LabelFor(model => model.TipoVehiculo)</strong>
            <p>@Html.DisplayFor(model => model.TipoVehiculo)</p>

        </div>
        <div class="col-sm-2">
            <strong>@Html.LabelFor(model => model.Bastidor)</strong>
            <p>@Html.DisplayFor(model => model.Bastidor)</p>

        </div>
    </div>
</div>
 

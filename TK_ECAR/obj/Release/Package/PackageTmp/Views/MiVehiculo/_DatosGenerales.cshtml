            <p>@Html.DisplayFor(model => model.Seguro_Poliza)</p>
        </div>
        <div class="col-sm-2">
            <strong>@Html.LabelFor(model => model.Seguro_Importe)</strong>
            <p>@Html.DisplayFor(model => model.Seguro_Importe)</p>
        </div>
        <div class="col-sm-3">
            <strong>@Html.LabelFor(model => model.Seguro_FechaVencimiento)</strong>
            <p>@Html.DisplayFor(model => model.Seguro_FechaVencimiento)</p>
        </div>
        <div class="col-sm-3">
            <strong>@Html.LabelFor(model => model.Seguro_Tipo)</strong>

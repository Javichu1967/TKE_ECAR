@using resourceView = TK_ECAR.Content.resources.TK_ECAR_Resource

@using (Html.BeginForm("GuardarGestorFlota", "GestoresFlota", null, FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "stripHtml('formGestorFlota')", @id= "formGestorFlota" }))
{ @Html.AntiForgeryToken()
    
        <div class="modal fade" id="modalGestorFlota" role="dialog">
            <div class="vertical-alignment-helper">
                <div class="modal-dialog  vertical-align-center">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                <span class="modal-header-logo"></span>
                            </button>
                            <h4 class="modal-title" id="modaltitleGestorFlota"> </h4>
                        </div>
                         
                        <div class="modal-body"> 
                            @*<div id="toast-container"></div>*@              
                            <div id="modalbodyGestorFlota"></div> 
                            
                        </div>                             
                        <div class="modal-footer">
                            <button type="submit" id="aceptarGestorFlota" class="btn btn-default">@resourceView.AccionAceptar</button>
                            <button type="button" class="btn btn-cancel" data-dismiss="modal">@resourceView.AccionCerrar</button>
                         </div>

                    </div>
                </div>
            </div>
        </div>
      
}

    <script type="text/javascript">


        $(document).ready(function () {

            $("#formGestorFlota").submit(function (e) {
                if ($("#formGestorFlota").valid()) {//validamos el form
                    var formData = new FormData(this);
                    var uRl = '@Url.Action("Index", "GestoresFlota")';
                    $.ajax({
                        type: this.method,
                        url: this.action,
                        data: formData,
                        contentType: false,
                        processData: false,

                        success: function (data) {
                            ajaxSuccessGestorFlota();

                            setTimeout(function () { window.location.replace(uRl) }, 1000);

                        },
                        error: function (error) {
                            ajaxErrorGestorFlota();
                        }
                    });
                }

                e.preventDefault();

            });
        });

        function ajaxSuccessGestorFlota() {

            @*toastr["info"]("@resourceView.toastrInfPreguntaCorrecta");*@
            notify('@resourceView.toastrInfGestorFlotaCorrecto', 'i');

            $('#modalGestorFlota').modal('hide');
        }
        function ajaxErrorGestorFlota() {

            @*toastr["error"]("@resourceView.toastrInfPreguntaError");*@
            notify('@resourceView.toastrInfGestorFlotaError', 'e');

        }


    </script>

    $(function () {
       

        var valor = '@(((int?)ViewData["idTipoAlerta"]).HasValue ? ((int)ViewData["idTipoAlerta"]).ToString() : string.Empty)';

        if (valor != '') {

            $.ajax({
                "url": '@Html.Raw(@Url.Action("GetTiposAlertasByVal", "Filter", new { valor = (int?)ViewData["idTipoAlerta"] }))',
                "dataType": 'json',
                "success": function (data, t, x) {

                    $.each(data, function (i, val) {
                        var $opt = $('<option value="' + val.value + '" selected="selected">').html(val.text);
                        $('#TiposAlertas').append($opt);
                    });

                    $("#TiposAlertas").trigger("chosen:updated");
 
                }
            });
        }
     

        chosenTiposAlertas();
    });


<div class="input-group date">
    @Html.TextBox("", ViewData.TemplateInfo.FormattedModelValue.ToString(), "{0:MM/yyyy}", new { @class = "form-control" })
    <span class="input-group-addon"><i class="tk-icon icon-tk-calendar"></i></span>
</div>
<script type="text/javascript">
    var propertymodel = '@ViewData.ModelMetadata.PropertyName';
    $("#" + propertymodel).datepicker({
        format: "mm/yyyy",
        startView: "months",
        minViewMode: "months",
        autoclose: true,
    });


</script>
@using resourceView = TK_ECAR.Content.resources.TK_ECAR_Resource

<select id="miMarcas" title=@resourceView.LSelectCompany multiple="multiple" class="form-control">
    <option></option>
</select>
<style type="text/css">
    #miMarcas_chosen {
        width: 100% !important;
        display: block;
    }
</style>

<script type="text/javascript">

    $(function () {
        ChosenMarcasVehiculo();
    }); 

    function ChosenMarcasVehiculo() {
        var uRl = '@Html.Raw(@Url.Action("GetMarcaVehiculo_Chosen", "MiFlota"))'
        $("#miMarcas").ajaxChosen({
            type: 'GET',
            url: uRl,
            "async": false,
            minTermLength: 0,
            dataType: 'json'
        }, function (data) {
            var terms = [];
            $.each(data, function (i, val) {
                terms[i] = val;
            });
            return terms;

        },
            {
                //options
                disable_search_threshold: -1,
                allow_single_deselect: true,
            });
    }

    $('#miMarcas').change(function () {

        LimpiaFiltroChosen("miModelos");

        ChosenModelosVehiculo();
    });

</script>

@using resourceView = TK_ECAR.Content.resources.TK_ECAR_Resource
@model ModelStateDictionary
 
<div id="divValidationSummary" class="@(Html.ViewData.ModelState.IsValid ? "validation-summary-valid" : "validation-summary-errors") panel panel-danger" 
  data-valmsg-summary ="true">

  <div class="panel-heading">
      <a style="color: #a94442;" data-toggle="collapse" data-target="#collapseListaErrores" href="#">
          @resourceView.msgValidationSumary
      </a>
  </div>

    <div id="collapseListaErrores" class="collapse in">
        <div id="divValidationSummaryPanel_body" class="panel-body">
            <ul id="ulListaErrores">
                @foreach (var modelError in Model.SelectMany(keyValue => keyValue.Value.Errors))
                {
                    <li>
                        @modelError.ErrorMessage
                    </li>

                }
            </ul>
        </div>
    </div>
</div>

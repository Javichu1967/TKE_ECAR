                @Html.TextBoxFor(model => model.Seguro_Importe, new { @class = "form-control", @marca="EsDouble", @puedeDeshabilitarse = "SI" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Seguro_FechaVencimiento, new { @class = "control-label col-md-3" })
            <div class="col-md-7">
                @Html.EditorFor(m => m.Seguro_FechaVencimiento)
            </div>
        </div>
    </div>
</div>


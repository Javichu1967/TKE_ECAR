<div class="input-group date">  
    @if (ViewData.ModelMetadata.IsReadOnly) //this will be looking at the actual property not the complete model
    {
        @Html.TextBox("", ViewData.TemplateInfo.FormattedModelValue.ToString(), "{0:dd/MM/yyyy}", new { @class = "form-control", @readonly="readonly" })
    }
    else
    {
        @Html.TextBox("", ViewData.TemplateInfo.FormattedModelValue.ToString(), "{0:dd/MM/yyyy}", new { @class = "form-control", @puedeDeshabilitarse = "SI" })
    }

    <span class="input-group-addon"><i class="tk-icon icon-tk-calendar"></i></span>
</div>

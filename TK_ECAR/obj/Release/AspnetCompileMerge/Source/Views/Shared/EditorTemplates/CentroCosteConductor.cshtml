@using resourceView = TK_ECAR.Content.resources.TK_ECAR_Resource

<select id="miCECO" title="Seleccionar un empleado" search class="form-control" data-placeholder=@resourceView.placeholderChosen puedeDeshabilitarse = "SI" >
    <option></option>
</select>
<style type="text/css">
    #miCECO_chosen {
        width: 100% !important;
        display: block;
    }
</style>

<script type="text/javascript">

    if ($("#CECO").val() != '') {
        chosenCentroCosteConductorSeleccionado();
    }

    chosenCentroCosteConductor();

    function chosenCentroCosteConductorSeleccionado() {
        var uRl = '@Html.Raw(@Url.Action("GetCentrosCosteID", "Conductores", new { ID = "idchosen" }))'
        uRl = uRl.replace("idchosen", $("#CECO").val());
        $.ajax({
            "url": uRl,
            "dataType": 'json',
            //"async": false,
            "success": function (data, t, x) {
                $.each(data, function (i, val) {
                    var $opt = $('<option value="' + val.value + '" selected="selected">').html(val.textFormated);
                    $('#miCECO').append($opt);
                });

                $("#miCECO").trigger("chosen:updated");
            }
        });
    }


    function chosenCentroCosteConductor() {
        var link = '@Html.Raw(Url.Action("GetCentrosCoste", "Filter", new { empresasSel = "", dirTerritorialSel = "", delegacionSel = "" }))';
        $('#miCECO').prepend($('<option></option>').html('@resourceView.msgCargando'));
        $("#miCECO").ajaxChosen({
            type: 'GET',
            url: link,
            minTermLength: 0,
            dataType: 'json'
        }, function (data) {
            var terms = [];
            $.each(data, function (i, val) {
                terms[i] = val;
            });
            return terms;

        },
            {
                //options
                disable_search_threshold: -1,

            });
    }

    $('#miCECO').on('chosen:hiding_dropdown', function (evt, params) {
        $('#CECO').val(this.value);
     });

</script>

@using TK_ECAR.Models
@model DocumentacionModel

@Html.HiddenFor(m => m.ID_Documento)
@Html.HiddenFor(m => m.Documento)
@Html.HiddenFor(m => m.Accion)
<div class="form-horizontal">
    <div class="form-group">
        @Html.RequiredLabelFor(m => m.ID_Categoria, new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
            @Html.DropDownListTiposCategorias("ID_Categoria", new { @class = "form-control", @disabled = "disabled" }, Model.ID_Categoria)
        </div>
    </div>

    <div class="form-group">
        @Html.RequiredLabelFor(m => m.Nombre, new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", @readonly = true })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Descripcion, new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
            @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", @readonly = true })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            @Html.Partial("_CustomValidationSummary", ViewData.ModelState)
        </div>
    </div>
</div>

 
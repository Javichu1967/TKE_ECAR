@using resourceView = TK_ECAR.Content.resources.TK_ECAR_Resource

@using (Html.BeginForm("GuardarPregunta", "PreguntasFrecuentes", null, FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "stripHtml('formPregunta')", @id="formPregunta" }))
{ @Html.AntiForgeryToken()
    
        <div class="modal fade" id="modalPregunta" role="dialog">
            <div class="vertical-alignment-helper">
                <div class="modal-dialog  vertical-align-center">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                <span class="modal-header-logo"></span>
                            </button>
                            <h4 class="modal-title" id="modaltitlePregunta"> </h4>
                        </div>
                         
                        <div class="modal-body"> 
                            @*<div id="toast-container"></div>*@              
                            <div id="modalbodyPregunta"></div> 
                            
                        </div>                             
                        <div class="modal-footer">
                            <button type="submit" id="aceptarPregunta" class="btn btn-default">@resourceView.AccionAceptar</button>
                            <button type="button" class="btn btn-cancel" data-dismiss="modal">@resourceView.AccionCerrar</button>
                         </div>

                    </div>
                </div>
            </div>
        </div>
      
}

    <script type="text/javascript">


        $(document).ready(function () {

            $("#formPregunta").submit(function (e) {


                if ($("#formPregunta").valid()) {//validamos el form
                    var formData = new FormData(this);
                    var uRl = '@Url.Action("Index", "PreguntasFrecuentes")';
                    $.ajax({
                        type: this.method,
                        url: this.action,
                        data: formData,
                        contentType: false,
                        processData: false,

                        success: function (data) {
                            ajaxSuccessPreguntas();
                            
                            setTimeout(function () { window.location.replace(uRl) },1000);
                            
                        },
                        error: function (error) {
                            ajaxErrorPreguntas();
                        }
                    });
                }

                e.preventDefault();

            });
        });

        function ajaxSuccessPreguntas() {

            @*toastr["info"]("@resourceView.toastrInfPreguntaCorrecta");*@
            notify('@resourceView.toastrInfAccionOK', 'i');

            $('#modalPregunta').modal('hide');
        }
        function ajaxErrorPreguntas() {

            @*toastr["error"]("@resourceView.toastrInfPreguntaError");*@
            notify('@resourceView.toastrInfPreguntaError', 'e');

        }


    </script>

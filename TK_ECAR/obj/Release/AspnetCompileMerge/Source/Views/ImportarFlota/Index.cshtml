    @using (Html.BeginForm("ImportarFlotaDesdeExcel", "ImportarFlota", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "stripHtml('formImportarFlota')", id = "formImportarFlota" }))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.FileToImport_download)
        @Html.HiddenFor(model => model.DescEmpresa)
        @Html.HiddenFor(model => model.IDEmpresa)

    <script src='@Scripts.Url("~/bundles/datatable")'> </script>
    <script src='@Scripts.Url("~/bundles/dtresponsive")'> </script>

    <script src='@Scripts.Url("~/bundles/DataTablesButtonJs")'> </script>
    <script src='@Scripts.Url("~/bundles/DataTablesbuttonsFlashJs")'> </script>
    <script src='@Scripts.Url("~/bundles/DataTablesbuttonsHtml5Js")'> </script>
    <script src='@Scripts.Url("~/bundles/DataTablesjszipJs")'> </script>
    <script src='@Scripts.Url("~/bundles/DataTablesVfsFontsJs")'> </script>

    <script src="~/Content/scripts/Application/Global.js"></script>
    <script src="~/Content/scripts/Application/DataTableUtilities.js"></script>

    <script type="text/javascript" language="javascript">
        var tableResumenImp = null;
        var uRl_IdentificadorUnico = '@Html.Raw(@Url.Action("ValidaIdentificadorUnico", "ImportarFlota", new { identificador = "identificadorimportacion" }))'
        var uRl = '@Url.Action("ImportarFlotaDesdeExcel", "ImportarFlota")';
        var conexionEstablecida = false;
        var backColorIncidencia = '#ffb400';
        var backColorVehiculoInexistente = '#ffb400';
        var backColorError = '#e60050';
        var backColorConductorNuevo = '#73c3f0';
        var backColorResumen = '#eee';
        var nombreArchivoImportar = '';
        var continuar = true;

        $(document).ready(function () {
            //$('.progress').hide();
            $('#btnImportar').hide();
            $('#rowProgress').hide();
            $('#rowResumen').hide();

            tableResumenImp = $('#tableResumenImp').DataTable({
                "dom": 'Blfrtip',
                "bInfo" : false,
                "ordering": false,
                "processing": true,
                "paginate": true,
                "pageLength": 25,
                "buttons": [
                    {
                        text: '@resourceView.TK_ECAR_Resource.btnExportarExcel',
                        extend: 'excel',
                        className: 'btn btn-default export-btn',
                        title: '@Html.Raw(@resourceView.TK_ECAR_Resource.titleResumenImportacion + "_" + @resourceView.TK_ECAR_Resource.TitleFlota + "_")' + GetCurrentDateFormatYYYYMMDD(),
                        exportOptions: {
                            columns: [1]
                        }
                    }
                ],
                "ajax": {
                    "url": '@Url.Action("DatosImportacionJson", "ImportarFlota")',
                    "datatype": "json",
                    "type": "POST",
                },
                "rowCallback": function (row, data, index) { //Cambiar formato de la línbea.
                    switch (data.TipoLinea)
                    {
                        case @((int)EnumTipoLineaImportacion.ConductorNuevo):
                            $(row).css('background-color', backColorConductorNuevo);
                            break;
                        case @((int)EnumTipoLineaImportacion.MatriculaVacia):
                            $(row).css('background-color', backColorIncidencia);
                            break;
                        case @((int)EnumTipoLineaImportacion.NoHayConductor):
                            $(row).css('background-color', backColorIncidencia);
                            break;
                        case @((int)EnumTipoLineaImportacion.SinFechaMatriculacion):
                            $(row).css('background-color', backColorIncidencia);
                            break;
                        case @((int)EnumTipoLineaImportacion.SinTipoDeVehiculo):
                            $(row).css('background-color', backColorIncidencia);
                            break;
                        case @((int)EnumTipoLineaImportacion.VehiculoExistente):
                            $(row).css('background-color', backColorVehiculoInexistente);
                            $(row).css('color', '#ffffff');
                            break;
                        case @((int)EnumTipoLineaImportacion.ConductorNoEncontrado):
                            $(row).css('background-color', backColorIncidencia);
                            $(row).css('color', '#ffffff');
                            break;
                        case @((int)EnumTipoLineaImportacion.Error):
                            $(row).css('background-color', backColorError);
                            $(row).css('color', '#ffffff');
                            break;
                        case @((int)EnumTipoLineaImportacion.Resumen):
                            $(row).css('font-weight', 'bold');
                            $(row).css('font-size', '15px');
                            $(row).css('background-color', backColorResumen);
                            break;
                        case @((int)EnumTipoLineaImportacion.Normal):
                            $(row).css('background-color', backColorResumen);
                            break;
                    }
                    @*switch(data[0]){
                        case '@((int)EnumTipoLineaImportacion.ConductorNuevo)':
                            $(Row).css('color', 'red')
                            break;
                    }*@
                },
                "columns": [
                        { "data": "TipoLinea" },
                        { "data": "Texto" }
                ],
                "language": {
                    "url": '@Url.Content(ConfigurationManager.AppSettings["baseUrl"] + "/Content/DataTables/i18n/" + @resourceView.TK_ECAR_Resource.ArchivoIdiomaDataTable )'
                },
                //"data": respuesta.data,
                "columnDefs": [
                {
                    "targets": 0,
                    "visible": false,
                    "searchable": false,
                },
                {
                    "targets": 1,
                    "searchable": true,
                },
                ]
            });

            $(document).on('click', '#btnImportar', function (event) {
                if ($("#formImportarFlota").valid()) {//validamos el form
                    if (archivoProcesadoAnteriormente()) {
                        confirm('@resourceView.TK_ECAR_Resource.msgCabFicheroYaProcesado', '@resourceView.TK_ECAR_Resource.msgFicheroYaProcesado',
                            function (result) {
                                if (result) {
                                    continuar = true;
                                    $(this).resetSummary();
                                    $("#formImportarFlota").submit();
                                } else {
                                    continuar = false;
                                }
                            });
                    }else {
                        continuar = true;
                        $(this).resetSummary();
                        $("#formImportarFlota").submit();
                    }
                }else{
                    $('#rowValidationSummary').show();
                }
            });

            $("#formImportarFlota").submit(function (e) {
                e.preventDefault();
                if ($("#btnImportar").is(":visible")){
                    if ($("#formImportarFlota").valid()) {//validamos el form
                        LimpiaValidationSummary();
                        if (continuar){
                            if (!ExcededFilesSizeUpload('formImportarFlota')){
                                $("#rowValidationSummary").hide();
                                $('#rowProgress').show();

                                var formData = new FormData(this);
                                $.ajax({
                                    type: "POST",
                                    url: uRl,
                                    dataType: 'json',
                                    //async: false,
                                    data: formData,
                                    contentType: false,
                                    processData: false,

                                    success: function (data) {
                                        if (data == 'OK') {
                                            ajaxSuccessImportacion();
                                            $('#btnImportar').hide();
                                        }
                                        else {
                                            ajaxErrorImportacion();
                                            $('#btnImportar').hide();

                                        }
                                    },
                                    error: function (error) {
                                        ajaxErrorImportacion();
                                        $('#btnImportar').hide();
                                    }
                                });
                            }
                            else{
                                var mensaje = '@Html.Raw(@resourceView.TK_ECAR_Resource.toastrInfTamañoArchivosError)'.replace('#', (sizeRequest / 1024))
                                notify(mensaje, 'e');
                            }
                        }
                    }else{
                        $('#rowValidationSummary').show();
                    }
                }
            });
        });

        $('#miEmpresa').on('chosen:hiding_dropdown', function (evt, params) {
            $("#DescEmpresa").val($("#miEmpresa").val());
        });


        $("#FileToImport").on('change', function (evt) {
            $(this).resetSummary();
            $("#rowValidationSummary").hide();

            $('#rowResumen').hide();

            InicializaProgress();

            hideProgress_Resumen();

            var files = evt.target.files; // FileList object

            if (files.length > 0 && conexionEstablecida) {
                nombreArchivoImportar = files[0].name;
                $('#btnImportar').show();
                if ($("#IdentificadorImportacion").val() == ''){
                    $("#IdentificadorImportacion").val(nombreArchivoImportar);
                }
            }
            else {
                nombreArchivoImportar = '';
                $('#btnImportar').hide();
            }
        });


        function reloadtableResumenImp() {
            $("#TituloResumen").html('@resourceView.TK_ECAR_Resource.titleResumenImportacion' + '  (CARGANDO)');
            tableResumenImp.ajax.reload(null, false);
            $("#TituloResumen").html('@resourceView.TK_ECAR_Resource.titleResumenImportacion');
            showResumen();
        }

        function hideProgress_Resumen(){
            $('#rowProgress').hide();
            $('#rowResumen').hide();
        }
        function showResumen(){
            $('#rowResumen').show();
            //$("#TituloResumen").attr("style", "visibility: visible");
            //$("#tableResumenImp_wrapper").attr("style", "visibility: visible");
            //$("#tableResumenImp").attr("style", "visibility: visible");
        }


        function ajaxSuccessImportacion() {
            notify('@resourceView.TK_ECAR_Resource.toastrInfImportFlotaCorrecto', 'i');
            //cerrarVentanaMtoITV();
        }

        function ajaxErrorImportacion() {
            notify('@resourceView.TK_ECAR_Resource.toastrInfImportFlotaError', 'e');
        }

        function archivoProcesadoAnteriormente() {
            var valorReturn = false;
            var uRlImportado = '@Html.Raw(@Url.Action("ArchivoYaProcesado", "ImportarFlota", new { archivo = "valorarchivo" }))';
            uRlImportado = uRlImportado.replace("valorarchivo", nombreArchivoImportar);
            $.ajax({
                "url": uRlImportado,
                "dataType": "json",
                "async": false,
                "success": function (res) {
                    if (res == "SI") {
                        valorReturn = true;
                    }
                }
            });

            return valorReturn;
        }

    </script>
}

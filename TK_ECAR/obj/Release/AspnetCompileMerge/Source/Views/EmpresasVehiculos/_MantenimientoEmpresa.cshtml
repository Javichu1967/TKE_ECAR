@using resourceView = TK_ECAR.Content.resources.TK_ECAR_Resource
@using TK_ECAR.Models
@model EmpresasVehiculosModels

@Html.HiddenFor(m => m.IDEmpresa)
@Html.HiddenFor(m => m.Accion)
@Html.HiddenFor(m => m.Renting)
@Html.HiddenFor(m => m.Aseguradora)
<div class="form-horizontal">
    <div class="form-group">
        @Html.RequiredLabelFor(m => m.Nombre, new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.RequiredLabelFor(m => m.NIF, new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.NIF, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Direccion, new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Direccion, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Poblacion, new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Poblacion, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CodPostal, new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.CodPostal, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PersonaContacto, new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.PersonaContacto, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Telefono1, new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Telefono1, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Telefono2, new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Telefono2, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.RequiredLabelFor(m => m.Renting, new { @class = "control-label col-sm-3" })
        <div class="col-sm-2" style="margin-left: -5px; margin-top: 6px;">
            <div class="material-switch pull-right col-xm-2">
                <input id="marcaRenting" name="marcaRenting" type="checkbox" />
                <label for="marcaRenting" class="label-primary"></label> @*label-default, label-primary, label-success, label-info, label-warning, label-danger*@
                <span class="valorRenting">
                    @Html.DisplayFor(m => m.Renting)
                </span>
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.RequiredLabelFor(m => m.Aseguradora, new { @class = "control-label col-sm-3" })
        <div class="col-sm-2" style="margin-left: -5px; margin-top: 6px;">
            <div class="material-switch pull-right col-xm-2">
                <input id="marcaAseguradora" name="marcaAseguradora" type="checkbox" />
                <label for="marcaAseguradora" class="label-primary"></label> @*label-default, label-primary, label-success, label-info, label-warning, label-danger*@
                <span class="valorAseguradora">
                    @Html.DisplayFor(m => m.Aseguradora)
                </span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-12">
            @Html.Partial("_CustomValidationSummary", ViewData.ModelState)
        </div>
    </div>
</div>


<script type="text/javascript">

    $(document).ready(function () {
        if ($("#Renting").val().toLowerCase() == "true") {
            $("#marcaRenting").prop('checked', true);
        }
        CambioRenting($("#marcaRenting").is(':checked'), true);

        if ($("#Aseguradora").val().toLowerCase() == "true") {
            $("#marcaAseguradora").prop('checked', true);
        }
        CambioAseguradora($("#marcaAseguradora").is(':checked'), true);
    });

    $("#marcaRenting").click(function () {
        CambioRenting($("#marcaRenting").is(':checked'), false);
    });
    $("#marcaAseguradora").click(function () {
        CambioAseguradora($("#marcaAseguradora").is(':checked'), false);
    });
    
    function CambioRenting(esRenting) {
        if (esRenting) {
            $("#Renting").val(true);
            jQuery(".valorRenting").html('@resourceView.ValorYES');
        }
        else {
            $("#Renting").val(false);
            jQuery(".valorRenting").html('@resourceView.ValorNO');
        }
    }

    function CambioAseguradora(esAseguradora) {
        if (esAseguradora) {
            $("#Aseguradora").val(true);
            jQuery(".valorAseguradora").html('@resourceView.ValorYES');
        }
        else {
            $("#Aseguradora").val(false);
            jQuery(".valorAseguradora").html('@resourceView.ValorNO');
        }
    }

</script>

 
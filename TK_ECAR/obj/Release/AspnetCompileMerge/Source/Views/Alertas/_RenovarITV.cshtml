@model RenovarITVModel
 

@{
   bool edicion = !(Model.ExisteRenovacion); 
}
@Html.HiddenFor(m => m.IdAlerta)
@Html.HiddenFor(m => m.IdTipoAlerta)
@Html.HiddenFor(m => m.IdEstado)

<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(m => m.Matricula, new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m=>m.Matricula, new { @class = "form-control", @readonly="readonly" })
        </div>
    </div>

   
    <div class="form-group">
        @Html.RequiredLabelFor(m => m.FechaITV, new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
        
            @if (edicion)
            {
                @Html.EditorFor(m => m.FechaITV)
            }
            else
            { @Html.DisplayFor(m => m.FechaITV) }
            
        </div>
    </div> 
    <div class="form-group">
        @Html.RequiredLabelFor(m => m.FechaCaducidadITV, new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
          
            @if (edicion)
            {
                @Html.EditorFor(m => m.FechaCaducidadITV)
            }
            else
            { @Html.DisplayFor(m => m.FechaCaducidadITV) }
        </div>
    </div> 
    <div class="form-group">
        @Html.RequiredLabelFor(m => m.FileUpload, new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
            @if (edicion)
            {
                @Html.EditorFor(m => m.FileUpload)
            }
            else if (!string.IsNullOrEmpty(Model.FileDownload))
            {

                <a href="@Url.Action("DownloadFile", "Alertas", new { idAlerta = Model.IdAlerta, fichero = Model.FileDownload })">
                    @Html.DisplayFor(m => m.FileDownload)
                </a>

            }
        </div>
    </div>
 
    <div class="form-group">
        <div class="col-sm-12">
            @Html.Partial("_CustomValidationSummary", ViewData.ModelState)
        </div>
    </div>
                    
</div>
 
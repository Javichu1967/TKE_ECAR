 
@model DatosMultaModel
 
@Html.HiddenFor(m => m.IdTipoAlerta)
@{ 
    bool alta = (Model.IdAlerta == 0);
}

<style>
.form-control-datosMulta {
    width: 100%;
    height: 34px;
    padding: 6px 12px;
    font-size: 14px;
    line-height: 1.42857143;
    color: #555;
    background-color: #fff;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 4px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    -webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
    -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
}
</style>
<div class="form-horizontal">
    <div class="form-group">       
        @Html.RequiredLabelFor(m => m.Matricula, new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
            @if (alta)
            {
                @Html.EditorFor(m => m.Matricula)
            }
            else { @Html.DisplayFor(m => m.Matricula) }
            
        </div>
    </div>
    <div class="form-group">
        @Html.RequiredLabelFor(m => m.FechaDenuncia, new { @class = "control-label col-sm-3" })

        <div class="col-sm-8">

            @if (alta)
            {
                @Html.EditorFor(m => m.FechaDenuncia)
            }
            else
            { @Html.DisplayFor(m => m.FechaDenuncia) }
        </div>
    </div>

        <div class="form-group">
            @Html.RequiredLabelFor(m => m.HoraDenuncia, new { @class = "control-label col-sm-3" })

            <div class="col-sm-3">

                @if (alta)
                {
                    @Html.TextBoxFor(m => m.HoraDenuncia, new { @class = "form-control-datosMulta", @style = "width: 42px; display: -webkit-inline-box;", @maxlength = 2, @type = "horaYminutos" })
                    <span>:</span> 
                    @Html.TextBoxFor(m => m.MinutosDenuncia, new { @class = "form-control-datosMulta", @style = "width: 42px", @maxlength = 2, @type = "horaYminutos" })
                }
                else
                {   @Html.TextBoxFor(m => m.HoraDenuncia, new { @class = "form-control-datosMulta", @style = "width:42px;", @disabled = "disabled", @readonly = "readonly" })
                    <span>:</span>
                    @Html.TextBoxFor(m => m.MinutosDenuncia, new { @class = "form-control-datosMulta", @style = "width:42px;", @disabled = "disabled", @readonly = "readonly" })
                }
            </div>

        </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Importe, new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">        
            @if (alta)
            {
                @Html.EditorFor(m => m.Importe)
            }
            else
            { @Html.DisplayFor(m => m.Importe) }
            
        </div>
       
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Expediente, new { @class = "control-label col-sm-3" })

        <div class="col-sm-8">
            @if (alta)
            {
                @Html.TextBoxFor(m => m.Expediente,  new { @class = "form-control" })
            }
            else
            { @Html.DisplayFor(m => m.Expediente)}           
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Infraccion, new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
          
            @if (alta)
            {
                @Html.TextBoxFor(m => m.Infraccion, new { @class = "form-control" })
            }
            else
            { @Html.DisplayFor(m => m.Infraccion) }
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Lugar, new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
            
            @if (alta)
            {
                @Html.TextBoxFor(m => m.Lugar, new { @class = "form-control" })
            }
            else
            { @Html.DisplayFor(m => m.Lugar) }
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FileUpload, new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
            
            @if (alta)
            {
               @Html.EditorFor(m => m.FileUpload)
            }
            else if (!string.IsNullOrEmpty(Model.FileDownload))
            {
                
                <a href="@Url.Action("DownloadFile", "Alertas", new { idAlerta = Model.IdAlerta, fichero = Model.FileDownload })">
                    @Html.DisplayFor(m => m.FileDownload)
                </a>
              
            }
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            @Html.Partial("_CustomValidationSummary", ViewData.ModelState)
        </div>
    </div>
   
</div>

 <script type="text/javascript">

     //Enviar el foco al siguiente elemento
     $('#HoraDenuncia').keyup(function () {
         if ($(this).val().length == $(this).attr("maxlength") && $(this)[0].selectionEnd == $(this)[0].selectionStart) {
             $('#MinutosDenuncia').focus();
         }
     });
     $('#MinutosDenuncia').keyup(function () {
         if ($(this).val().length == $(this).attr("maxlength") && $(this)[0].selectionEnd == $(this)[0].selectionStart) {
             $('#Importe').focus();
         }
     });

     $("input[type=horaYminutos]").focus(function () {
         this.select();
     });

 </script>


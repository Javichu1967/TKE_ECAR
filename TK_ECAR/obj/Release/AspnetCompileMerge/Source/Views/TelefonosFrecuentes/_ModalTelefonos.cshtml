@using resourceView = TK_ECAR.Content.resources.TK_ECAR_Resource

@using (Html.BeginForm("GuardarTelefono", "TelefonosFrecuentes", null, FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "stripHtml('formTelefonos')", @id="formTelefonos" }))
{ @Html.AntiForgeryToken()
    
        <div class="modal fade" id="modalTelefonos" role="dialog">
            <div class="vertical-alignment-helper">
                <div class="modal-dialog  vertical-align-center">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                <span class="modal-header-logo"></span>
                            </button>
                            <h4 class="modal-title" id="modaltitleTelefonos"> </h4>
                        </div>
                         
                        <div class="modal-body"> 
                            @*<div id="toast-container"></div>*@              
                            <div id="modalbodyTelefonos"></div> 
                            
                        </div>                             
                        <div class="modal-footer">
                            <button type="submit" id="aceptarTelefonos" class="btn btn-default">@resourceView.AccionAceptar</button>
                            <button type="button" class="btn btn-cancel" data-dismiss="modal">@resourceView.AccionCerrar</button>
                         </div>

                    </div>
                </div>
            </div>
        </div>
      
}

    <script type="text/javascript">


        $(document).ready(function () {

            $("#formTelefonos").submit(function (e) {


                if ($("#formTelefonos").valid()) {//validamos el form
                    var formData = new FormData(this);
                    var uRl = '@Url.Action("Index", "TelefonosFrecuentes")';
                    $.ajax({
                        type: this.method,
                        url: this.action,
                        data: formData,
                        contentType: false,
                        processData: false,

                        success: function (data) {
                            ajaxSuccessTelefonos();
                            setTimeout(function () { window.location.replace(uRl) }, 1000);
                            
                        },
                        error: function (error) {
                            ajaxErrorTelefonos();
                        }
                    });
                }

                e.preventDefault();

            });
        });

        function ajaxSuccessTelefonos() {

            @*toastr["info"]("@resourceView.toastrInfTelefonoCorrecto");*@
            notify('@resourceView.toastrInfAccionOK', 'i');

            $('#modalTelefonos').modal('hide');
        }
        function ajaxErrorTelefonos() {

            @*toastr["error"]("@resourceView.toastrInfTelefonoError");*@
            notify('@resourceView.toastrInfTelefonoError', 'e');
        }


    </script>
